set nu
"set rnu
set autochdir
set history=1000
set ai
set si
set expandtab
set ts=2
set st=2
set sw=2
set ignorecase
set hlsearch
set incsearch
set nobackup
set nowb
set noswapfile
set cc=120
"set lines=30 columns=90
"vim自身命令行模式智能补全
set wildmenu
"高亮显示当前行/列
set cursorline
"set cursorcolumn
"禁止折行
set nowrap

"Python特殊设置
autocmd Filetype python setlocal ts=4 sts=4 sw=4

"Javascript特殊设置
autocmd Filetype javascirpt setlocal ts=4 sts=4 sw=4
